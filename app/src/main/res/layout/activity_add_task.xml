<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTask"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="50dp">
    <EditText
        android:id="@+id/etEnterTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main.msg.enterTask"
        android:paddingTop="20dp"/>
    <CheckBox
        android:id="@+id/chkEveryday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEnterTask"
        android:text="Daily Task"/>
        <TextView
            android:id="@+id/tvDatePicker"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkEveryday"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:hint="@string/main.msg.enterDueDate"
            />
        <TextView
            android:id="@+id/tvTimePicker"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:layout_below="@id/chkEveryday"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:hint="@string/main.msg.enterDueTime"
            android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_below="@id/tvTimePicker"
        android:background="@color/colorAccent"
        android:text="Submit"
        android:textColor="#fff"/>
</RelativeLayout>